<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#5a7c94"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#DAD4c3"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Adidas" />

            <TextView
                android:id="@+id/ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Ratings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="#336774"
                android:padding="10dp"
                android:text="200 SAR"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/product_images"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/download"

                android:layout_below="@id/ratings"
                android:layout_centerHorizontal="true"/>
            <com.hariofspades.incdeclibrary.IncDecCircular
                android:layout_below="@id/product_images"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:textSize="34"
                android:id="@+id/incdec"
                android:layout_alignParentRight="true"
                app:textColor="@color/white"
                app:leftButtonColorTint="@color/colorPrimaryDark"
                app:rightButtonColorTinit="@color/colorPrimary"
                app:leftDrawableTint="@color/white"
                app:rightDrawableTint="@color/white"
                app:leftDrawable="@mipmap/minus"
                app:rightDrawable="@drawable/plus"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_below="@id/product_images"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_margin="10dp"
                android:text="Lorem ipsum dolor sit amet, consectiaopthasfhaishfphasdpfhasphfdpasohfdpoashfdpohasdfpohasfdphaspdfhasphfdasphf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#dad4c3"
                android:layout_below="@id/description_text"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:textColor="#fff"
                    android:layout_margin="20dp"
                    android:layout_below="@id/description_text"
                    android:background="#f76e33"/>
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD To cart"
                android:textColor="#fff"
                android:layout_margin="20dp"

                android:background="#f76e33"/>


            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>